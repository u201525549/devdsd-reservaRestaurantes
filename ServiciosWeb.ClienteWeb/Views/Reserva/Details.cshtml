@model ServiciosWeb.Dominio.Reserva

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    Hacer Reserva - "Lo Mejor de Militas"
</h2>

<div class="form-inline float-md-right">
    <label for="txtfechahora" class="col-sm-4 col-form-label">Fecha:</label>
    <div class="col-sm-8">
        @Html.TextBoxFor(model => model.rese_fechhorareg, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
    </div>
</div>
<br />
<hr />

<div class="row">

    <div class="col-md-6">
        <div class="form-group row">
            <label for="rese_id" class="col-sm-4 col-form-label">Codigo de Reserva: </label>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.rese_id, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group row">
            <label for="rese_anombre" class="col-sm-4 col-form-label">A nombre de: </label>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.rese_anombre, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group row">
            <label for="rese_anombre" class="col-sm-4 col-form-label">Nro. Contacto: </label>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.rese_nrocontacto, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <hr />
        <div class="form-group row">
            <label for="rese_fecha" class="col-sm-4 col-form-label">Fecha de reserva: </label>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.rese_fecha, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group row">
            <label for="rese_fecha" class="col-sm-4 col-form-label">Hora de reserva: </label>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.rese_hora, htmlAttributes: new { @class = "form-control", disabled = "disabled", @type = "time" })
            </div>
        </div>
        <div class="form-group row">
            <label for="rese_nroasistentes" class="col-sm-4 col-form-label">Nro de personas: </label>
            <div class="col-sm-8">
                @Html.TextBoxFor(model => model.rese_nroasistentes, htmlAttributes: new { @class = "form-control", disabled = "disabled" })
            </div>
        </div>
        <hr />
        @Html.ActionLink("CANCELAR RESERVA", "Index", new { controller = "Reserva" }, htmlAttributes: new { @class = "btn btn-outline-danger float-left mr-lg-3", @role = "button" })
        @Html.ActionLink("REGRESAR", "Index", new { controller = "Reserva" }, htmlAttributes: new { @class = "btn btn-outline-primary float-left", @role = "button" })
    </div>

</div>
