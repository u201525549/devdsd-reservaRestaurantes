@model ServiciosWeb.Dominio.Reserva

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>
    Hacer Reserva - "Lo Mejor de Militas"
</h2>

<div class="form-inline float-md-right">
    <label for="txtfechahora" class="col-sm-4 col-form-label">Fecha:</label>
    <div class="col-sm-8">
        @Html.TextBoxFor(model => model.rese_fechhorareg, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
    </div>
</div>
<br />
<hr />

@using (Html.BeginForm("Create", "Reserva" , method: FormMethod.Post))
{

<div class="row">

    <div class="col-md-6">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.LabelFor(model => model.rese_id, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.rese_id, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.rese_anombre, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.rese_anombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rese_anombre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.rese_nrocontacto, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.rese_nrocontacto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rese_nrocontacto, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        <div class="form-group row">
            @Html.LabelFor(model => model.rese_fecha, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.rese_fecha, new { htmlAttributes = new { @class = "form-control", @type="date" } })
                @Html.ValidationMessageFor(model => model.rese_fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.rese_hora, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.rese_hora, new { htmlAttributes = new { @class = "form-control", @type = "time" } })
                @Html.ValidationMessageFor(model => model.rese_hora, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            @Html.LabelFor(model => model.rese_nroasistentes, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.rese_nroasistentes, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rese_nroasistentes, "", new { @class = "text-danger" })
            </div>
        </div>
        <hr />
        @Html.ActionLink("REGRESAR", "Index", new { controller = "Busqueda" }, htmlAttributes: new { @class = "btn btn-outline-primary float-left mr-lg-3", @role = "button" })
        @*@Html.ActionLink("RESERVAR", "Create", new { controller = "Reserva" }, htmlAttributes: new { @class = "", @role = "submit" })*@
        <input type="submit" class="btn btn-outline-danger float-left" value="RESERVAR"/>
    </div>

</div>

}