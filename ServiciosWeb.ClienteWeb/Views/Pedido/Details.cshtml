@model ServiciosWeb.Dominio.Pedido

@{
    ViewBag.Title = "Detalle de Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detalle de Mi Pedido - "Lo Mejor de Militas" </h2>

<div class="form-inline float-md-right">
    <label for="txtfechahora" class="col-sm-4 col-form-label">Fecha:</label>
    <div class="col-sm-8">
        @Html.TextBoxFor(model => model.pedi_fechhora, htmlAttributes: new { @class = "form-control text-center", disabled="disabled" })
    </div>
</div>
<br />
<hr />

<table class="table table-striped table-bordered table-light">
    <thead class="thead-dark">
        <tr>
            <th>
                Item
            </th>
            <th>
                Producto
            </th>
            <th>
                Descripción
            </th>
            <th>
                Precio
            </th>
            <th>
                Tipo
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Importe
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.pedido_detalle)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.menu_detalle.producto.prod_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.menu_detalle.producto.prod_nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.menu_detalle.producto.prod_descrip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.menu_detalle.producto.prod_precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.menu_detalle.producto.tipo_comida.tico_descrip)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pedi_cant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pedi_importe)
            </td>
        </tr>
        }
    </tbody>

</table>
<hr />
<div class="row">
    <div class="col-md-9">
        <div class="form-group row">
            <label for="ddlModalidad" class="col-sm-4 col-form-label">Modalidad de Atención: (*)</label>
            <div class="col-sm-6">
                @*<select class="form-control" id="ddlModalidad" disabled>
                    <option>1</option>
                    <option>2</option>
                    <option>3</option>
                    <option>4</option>
                </select>*@
                @Html.TextBoxFor(model => model.modalidad_atencion.moat_descrip, htmlAttributes: new { @class = "form-control text-center", disabled="disabled" })
            </div>
        </div>
        <hr />
        <div class="form-group row border-dark p-2">
            <div class="col-md-6">
                <div class="form-group row">
                    <label for="pedi_subtotal" class="col-sm-4 col-form-label">A nombre de:</label>
                    <div class="col-sm-8">
                        @Html.TextBoxFor(model => model.reserva.rese_anombre, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <label for="pedi_subtotal" class="col-sm-5 col-form-label">Nro Contacto:</label>
                    <div class="col-sm-7">
                        @Html.TextBoxFor(model => model.reserva.rese_nrocontacto, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="col-md-7">
                <div class="form-group row">
                    <label for="pedi_subtotal" class="col-sm-6 col-form-label">Fecha y hora de reserva:</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.reserva.rese_fecha, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="form-group row">
                    <label for="pedi_subtotal" class="col-sm-6 col-form-label">Nro de personas:</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.reserva.rese_nroasistentes, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
                    </div>
                </div>
            </div>
        </div>
        <hr />
    </div>
    <div class="col-md-3">
        <div class="form-group row">
            <label for="txtsubtotal" class="col-sm-6 col-form-label">Subtotal</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.pedi_subtotal, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group row">
            <label for="txtprecioenvio" class="col-sm-6 col-form-label">Precio Envió</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.pedi_precioenvio, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group row">
            <label for="txtdescuento" class="col-sm-6 col-form-label">Descuento</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.pedi_descuento, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group row">
            <label for="txtrecargo" class="col-sm-6 col-form-label">Recargo</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.pedi_recargo, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
            </div>
        </div>
        <div class="form-group row">
            <label for="txttotalpagar" class="col-sm-6 col-form-label">Total a pagar</label>
            <div class="col-sm-6">
                @Html.TextBoxFor(model => model.pedi_total, htmlAttributes: new { @class = "form-control text-center", disabled = "disabled" })
            </div>
        </div>
        <hr />

        @Html.ActionLink("REGRESAR", "Index", new { controller = "Pedido" }, htmlAttributes: new { @class = "btn btn-outline-primary float-right", @role="button" })
    </div>
</div>